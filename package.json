{
  "name": "iva",
  "version": "0.9.0",
  "description": "IVA description",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencb/iva.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "ln -s lib/jsorolla/.eslintrc.json",
    "clean": "rm -rf build",
    "copy": "mkdir -p build/vendors && cp -r src/*.html src/conf src/img LICENSE README.md build && cp src/prod/index.html build && ./build-vendors.js",
    "copy-jsorolla": "mkdir -p build/jsorolla && cd lib/jsorolla && npm run dist && cd ../.. && cp -r lib/jsorolla/dist build/jsorolla",
    "vulcanize": "node_modules/vulcanize/bin/vulcanize build/iva-app.html > build/iva-app-vulcanize.html && mv build/iva-app-vulcanize.html build/iva-app.html",
    "build-iva-app": "./post-replace-iva.js",
    "build": "npm run clean && npm run copy && npm run copy-jsorolla && npm run vulcanize && npm run build-iva-app"
  },
  "dependencies": {
    "@polymer/polymer": "~2.1.1",
    "@webcomponents/webcomponentsjs": "~1.0.7",
    "@webcomponents/shadycss": "~1.0.4",
    "backbone": "~1.3.3",
    "bootstrap": "3.3.6",
    "bootstrap-colorpicker": "2.3.6",
    "bootstrap-table": "1.11.1",
    "bootstrap-treeview": "1.2.0",
    "bootstrap-validator": "~0.11.9",
    "cookies-js": "~1.2.2",
    "crypto-js": "~3.1.8",
    "eonasdan-bootstrap-datetimepicker": "~4.17.43",
    "file-saver": "~1.3.2",
    "font-awesome": "*",
    "highcharts": "~4.2.7",
    "jquery": "~2.2.4",
    "jspdf": "https://github.com/MrRio/jsPDF.git#1.3.4",
    "moment": "^2.15.1",
    "qtip2": "~3.0.3",
    "underscore": "~1.8.3",
    "urijs": "~1.18.10",
    "vulcanize": "^1.14.12"
  },
  "devDependencies": {
    "eslint": "~4.3.0",
    "eslint-config-airbnb": "~15.1.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "crisper": "~2.0.2",
    "grunt": "~0.4.5",
    "grunt-contrib-clean": "~1.0.0",
    "grunt-contrib-concat": "~1.0.1",
    "grunt-contrib-copy": "~1.0.0",
    "grunt-contrib-qunit": "~1.2.0",
    "grunt-contrib-rename": "0.0.3",
    "grunt-contrib-uglify": "~2.0.0",
    "grunt-curl": "~2.2.0",
    "grunt-html-build": "~0.6.1",
    "grunt-hub": "~0.7.0",
    "grunt-processhtml": "~0.4.1",
    "grunt-replace": "~1.0.1",
    "grunt-vulcanize": "~1.0.0",
    "js-beautify": "~1.6.4",
    "uglify-js": "^2.7.3",
    "vulcanize": "~1.14.8",
    "xmldom": "0.1.27",
    "shelljs": "0.7.8"
  }
}
